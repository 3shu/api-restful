###> symfony/framework-bundle ###
APP_ENV=dev
APP_SECRET=changeThisSecretInProduction
###< symfony/framework-bundle ###

###> AWS Configuration ###
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
# Set to 'true' to use AWS Secrets Manager, 'false' for local development with .env values
USE_AWS_SECRETS=true
###< AWS Configuration ###

###> Redis Configuration (for caching AWS secrets) ###
REDIS_HOST=redis
REDIS_PORT=6379
###< Redis Configuration ###

###> MySQL Configuration (User Database) ###
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_DATABASE=users_db
MYSQL_USER=root
MYSQL_PASSWORD=mysql_secret
###< MySQL Configuration ###

###> PostgreSQL Configuration (Books Database) ###
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DATABASE=books_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_secret
###< PostgreSQL Configuration ###

###> Database URLs ###
DATABASE_URL_MYSQL_USERS="mysql://root:mysql_secret@mysql:3306/users_db?serverVersion=8.0&charset=utf8mb4"
DATABASE_URL_POSTGRES_BOOKS="postgresql://postgres:postgres_secret@postgres:5432/books_db?serverVersion=16&charset=utf8"
###< Database URLs ###

